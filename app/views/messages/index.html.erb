<hr>

<% if current_user == nil %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
      <%= link_to "Sign In", new_user_session, class: "btn btn-large btn-info" %>
    </div>
  </div>
</div>

<% else %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
    <%= render 'users/form' %>
    <br>
    <%= link_to "New Message", new_message_path, class: "btn btn-large btn-info", id: "new_message_link", remote: true %>
    </div>
    <br>
    <div id="messages_list">
      <%= render @messages %>
    </div>
  </div>
</div>

<% end %>
